/ {
    chosen {
        zephyr,canbus = &flexcan0;   /* or &flexcan1, see zephyr.dts */
    };
};

&flexcan0 {
	pinctrl-0 = <&pinmux_flexcan0>;
    bus-speed = <500000>;   /* must match your adapter's bitrate */
};

&pinctrl{
	pinmux_flexcan0: pinmux_flexcan0 {
		group0 {
			pinmux = <CAN0_TXD_PIO1_10>,
				<CAN0_RXD_PIO1_11>;
			slew-rate = "fast";
			drive-strength = "low";
			input-enable;
		};
	};
};